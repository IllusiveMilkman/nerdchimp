  <div id="inner">
    <%= image_tag("1.svg", id: "c-1") %>
    <%= image_tag("2.svg", id: "c-2") %>
    <%= image_tag("3.svg", id: "c-3") %>
    <%= image_tag("4.svg", id: "c-4") %>
