
  <!-- profile start -->
<%= render 'shared/profile', user: @user, coursebananas: @coursebananas %>
<!-- profile end -->
  <div class="toggle">
    <div class="container d-flex">
      <ul class="nav nav-pills mb-3 flex-grow-1" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Your Courses (<%= @usercourses.all.count %>)</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Your Paths (<%= @paths.all.count %>)</a>
        </li>
      </ul>
      <div class="dropdown" id="add-course">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Add a new Course
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#"><%= link_to 'Via url', new_user_user_course_path(@user) %></a>
          <a class="dropdown-item" href="#"><%= link_to 'From course catalog', courses_path %></a>
        </div>
      </div>
    </div>
  </div>
<div class="toggle-content">
  <div class="container">
      <div class="tab-content" id="pills-tabContent">
        <!-- Library Tab -->
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">


        <!-- steph's dropdown button -->

          <br>

          <% @usercourses.each do |usercourse| %>
          <div class="card p-3 mb-3">
            <div>
              <h5><%= usercourse.course.title %></h5>
              <p><%= usercourse.course.description%></p>
            </div>
            <!-- progress graph -->
            <div>
              <div class="progress" data-percentage="<%= (usercourse.course_tracker / usercourse.course.duration * 100).to_i %>">
                <span class="progress-left">
                  <span class="progress-bar"></span>
                </span>
                <span class="progress-right">
                  <span class="progress-bar"></span>
                </span>
                <div class="progress-value">
                  <div><%= (usercourse.course_tracker / usercourse.course.duration * 100).to_i %>%</div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <!-- Path Tab -->
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
          <h1>My Paths</h1>

          <%= link_to 'new path', new_user_path_path(@user) %>
          <div class="row">
            <div class="col-4">
              <div class="list-group" id="list-tab" role="tablist">
                <% @paths.each do |path| %>
                <a class="list-group-item list-group-item-action" id="list-<%= path.id %>-list" data-toggle="list" href="#list-<%= path.id %>" role="tab" aria-controls="<%= path.id %>"><%= path.title %> (<%= path.user_courses.count %> Courses)</a>
                <% end %>
              </div>
            </div>
            <div class="col-8">
              <div class="tab-content" id="nav-tabContent">
                <% @paths.each do |path| %>
                <div class="tab-pane fade show active" id="list-<%= path.id %>" role="tabpanel" aria-labelledby="list-<%= path.id %>-list">
                  <% unless path.users_courses_paths.first.nil? %>
                  <% path.users_courses_paths.decorate.each do |ucp| %>
                  <div class="card p-3 mb-3">
                    <ul class="list-unstyled">
                      <li><h5><%= ucp.c_item.title %></h5></li>
                      <li>Via: <%= ucp.c_item.provider %></li>
                      <li id="progress-<%= ucp.user_course.id %>">Progress: <strong><%= (ucp.c_progress / ucp.c_duration * 100).to_i %>% - <%= (ucp.c_duration - ucp.c_progress).to_i %> hour(s) left</strong></li>
                    </ul>
                    <div>
                      <input type="range" class="custom-range" id="slider" min="0" max="<%= ucp.user_course.course.duration %>" step="1" value="<%= ucp.user_course.course_tracker %>" data-course="<%= ucp.c_item.id %>" data-user="<%= ucp.user_course.user_id %>">
                    </div>
                  </div>
                  <% end %>
                  <% end %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    <hr>

    <!-- Library -->
    <div class="conatiner mb-4" style="display: flex; justify-content: space-between;">
      <div>
        <ul id="library" class="sortable-list list-group" data-groupname="userLists" data-ltype="library">
          <h5>Library</h5>
          <% @usercourses.each do |usercourse| %>
          <li data-userid="<%= usercourse.user_id %>" data-courseid="<%= usercourse.course_id %>" class="m-1 list-group-item"><%= usercourse.course.title %></li>
          <% end %>
        </ul>
      </div>

      <!-- Path -->
      <% @paths.each do |path| %>
      <div>
        <ul style="background-color: grey;" class="sortable-list list-group" data-groupname="userLists" data-ltype="path" data-pathid="<%= path.id %>">
          <h5><%= path.title %></h5>
          <%= link_to user_users_courses_path_path(@user, path) do %>
            <i class="far fa-edit" style="color: white"></i>
          <% end %>
          <% unless path.users_courses_paths[0].nil? %>
          <% path.users_courses_paths.order(:position).each do |course| %>
          <li data-courseid="<%= course.user_course.course_id %>" data-position="<%= course.position %>" class="m-1 list-group-item">
            <%= course.user_course.course.title %>
            <!-- params needs to be passed in order of expected route params, then only additional params may follow -->
            <%= link_to "ðŸ—‘", user_users_courses_path_path(user_id: @user.id, id: path.id, course_id: "#{course.user_course.course_id}" ), :confirm => 'Are you sure?', method: :delete, remote: true, class: "path-course" %>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
      <% end %>

    </div>

