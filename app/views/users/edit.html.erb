<div class="container pt-3 d-flex justify-content-center">
  <div class="edit-profile">
    <h1 class="mb-3">Edit your profile</h1>
    <div class="d-flex" style="">
    <!-- Insert photo here once cloudinary is done: -->
    <%= cl_image_tag @user.photo, height: 200, width: 200, crop: :fill , class: 'profile-edit-picture' %>
    <%= simple_form_for(@user) do |f| %>
    <div>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    </div>
    </div>
    <div class="d-flex justify-content-between mt-3" style=" width: 438px;">
      <button id="fake-button" class="btn btn-primary " style="width: 200px;">Choose a Photo</button>
      <%= f.input :photo , label: false %>
      <%= f.input :photo_cache, as: :hidden  %>
      <%= f.submit class: 'submit-button-style btn btn-success'%>
    </div>
    <% end %>

  </div>
</div>
